{
  "title": "Picker",
  "description": "Pickers (sometimes known as \"dropdowns\" or \"selects\") allow users to choose from a list of options in a limited space. The list of options can change based on the context.",
  "x-category": "inputs",
  "x-spectrum-website-url": "https://spectrum.adobe.com/page/picker/",
  "type": "object",
  "properties": {
    "label": { "type": "string" },
    "labelPosition": {
      "type": "string",
      "default": "top",
      "enum": ["top", "side"]
    },
    "placeholder": { "type": "string" },
    "value": { "type": "string" },
    "width": {
      "type": "number",
      "description": "Not applicable to quiet picker."
    },
    "size": { "type": "string", "enum": ["s", "m", "l", "xl"], "default": "m" },
    "isQuiet": { "type": "boolean", "default": false },
    "necessityIndicator": {
      "type": "string",
      "enum": ["text", "icon"],
      "default": "icon"
    },
    "isRequired": { "type": "boolean", "default": false },
    "menuContainer": {
      "type": "string",
      "description": "The option to display the menu in a tray is available on mobile devices only.",
      "enum": ["popover", "tray"],
      "default": "popover"
    },
    "isError": { "type": "boolean", "default": false },
    "isDisabled": { "type": "boolean", "default": false },
    "isReadOnly": {
      "title": "is read-only",
      "type": "boolean",
      "default": false
    },
    "description": { "type": "string" },
    "errorMessage": { "type": "string" }
  },
  "required": ["labelPosition", "size", "menuContainer"]
}
