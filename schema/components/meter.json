{
  "title": "Meter",
  "description": "Meters are visual representations of a quantity or an achievement. Their progress is determined by user actions, rather than system actions.",
  "x-tags": ["status"],
  "x-spectrum-website-url": "https://spectrum.adobe.com/page/meter/",
  "type": "object",
  "properties": {
    "variant": {
      "type": "string",
      "enum": ["informative", "positive", "notice", "negative"],
      "default": "informative"
    },
    "label": { "type": "string" },
    "valueLable": { "type": "string" },
    "width": { "type": "number" },
    "size": {
      "type": "string",
      "enum": ["small", "large"],
      "default": "large"
    },
    "value": { "type": "number", "minimum": 0, "maximum": 1 }
  }
}
