{
  "title": "Action button",
  "description": "Action buttons allow users to perform an action or mark a selection. They’re used for similar, task-based options within a workflow, and are ideal for interfaces where buttons aren’t meant to draw a lot of attention.",
  "x-tags": ["actions"],
  "x-spectrum-website-url": "https://spectrum.adobe.com/page/action-button/",
  "type": "object",
  "properties": {
    "label": {
      "type": "string"
    },
    "hideLabel": {
      "type": "boolean",
      "default": false
    },
    "icon": {
      "$ref": "../shared/workflow-icon.json",
      "description": "Icon must be present if the label is not defined."
    },
    "size": {
      "allOf": [
        {
          "type": "string",
          "enum": ["s", "m", "l", "xl"],
          "default": "m",
          "format": "size"
        },
        {
          "$ref": "../shared/size.json"
        }
      ]
    },
    "isQuiet": {
      "type": "boolean",
      "default": false
    },
    "isSelected": {
      "type": "boolean",
      "default": false
    },
    "isEmphasized": {
      "type": "boolean",
      "default": false
    },
    "staticColor": {
      "type": ["string", "null"],
      "enum": ["white", "black"]
    },
    "selectedTextColor": {
      "$ref": "../shared/hex-color.json"
    },
    "hasHoldIcon": {
      "type": "boolean",
      "default": false
    },
    "isDisabled": {
      "type": "boolean",
      "default": false
    }
  },
  "required": ["label"]
}
