{
  "title": "Button",
  "description": "Buttons allow users to perform an action or to navigate to another page. They have multiple styles for various needs, and are ideal for calling attention to where a user needs to do something in order to move forward in a flow.",
  "x-category": "actions",
  "x-spectrum-website-url": "https://spectrum.adobe.com/page/button/",
  "type": "object",
  "properties": {
    "label": {
      "type": "string",
      "minLength": 1
    },
    "hideLabel": {
      "type": "boolean",
      "default": false
    },
    "icon": {
      "$ref": "../shared/workflow-icon.json",
      "description": "Icon must be present if the label is not defined."
    },
    "variant": {
      "type": "string",
      "enum": ["accent", "negative", "primary", "secondary"],
      "default": "accent"
    },
    "staticColor": {
      "$ref": "../shared/static-color.json"
    },
    "style": {
      "type": "string",
      "default": "fill",
      "enum": ["fill", "outline"]
    },
    "size": {
      "type": "string",
      "default": "m",
      "allOf": [
        { "enum": ["s", "m", "l", "xl"] },
        { "$ref": "../shared/size.json" }
      ]
    },
    "justified": {
      "type": "boolean",
      "default": false
    },
    "isPending": {
      "type": "boolean",
      "default": false
    },
    "isDisabled": {
      "type": "boolean",
      "default": false
    }
  },
  "anyOf": [{ "required": ["label"] }, { "required": ["icon"] }]
}
