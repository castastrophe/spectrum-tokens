{
  "title": "Scroll-zoom bar",
  "description": "Primarily for usage in timelines, a scroll-zoom bar lets a user scroll or zoom with the same control.",
  "x-tags": ["navigation"],
  "x-spectrum-website-url": "https://spectrum.adobe.com/page/scroll-zoom-bar/",
  "type": "object",
  "properties": {
    "size": { "type": "string", "enum": ["s", "m", "l"], "default": "m" },
    "orientation": {
      "type": "string",
      "enum": ["horizontal", "vertical"],
      "default": "horizontal"
    },
    "hideTrack": { "type": "boolean", "default": false },
    "hideHandles": { "type": "boolean", "default": false },
    "scaleDown": { "type": "boolean", "default": false },
    "isDetatched": { "type": "boolean", "default": false }
  }
}
