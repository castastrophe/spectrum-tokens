{
  "title": "Field label",
  "description": "Field labels give context to the information that a user needs to input. They're commonly used in forms.",
  "x-tags": ["inputs"],
  "x-spectrum-website-url": "https://spectrum.adobe.com/page/field-label/",
  "type": "object",
  "properties": {
    "label": { "type": "string" },
    "labelPosition": {
      "type": "string",
      "enum": ["top", "side"],
      "default": "top"
    },
    "size": { "type": "string", "enum": ["s", "m", "l", "xl"], "default": "m" },
    "necessityIndicator": {
      "type": ["string", "null"],
      "enum": ["text", "icon"],
      "default": "icon"
    },
    "isRequired": { "type": "boolean", "default": false },
    "isDisabled": { "type": "boolean", "default": false }
  }
}
